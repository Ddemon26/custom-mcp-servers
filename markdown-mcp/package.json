{
  "name": "markdown-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for markdown processing and transformation",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "markdown-mcp-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "ts-node --esm src/server.ts",
    "start": "node dist/server.js",
    "clean": "shx rm -rf dist",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "marked": "^14.1.3",
    "turndown": "^7.2.0",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "remark-gfm": "^4.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.5",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
