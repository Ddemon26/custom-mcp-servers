{
  "name": "csv-mcp-server",
  "version": "1.0.0",
  "description": "MCP server providing CSV parsing, filtering, creation, and editing tools",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "csv-mcp-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "ts-node --esm src/server.ts",
    "start": "node dist/server.js",
    "clean": "shx rm -rf dist",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "csv-parse": "^5.5.1",
    "csv-stringify": "^6.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
