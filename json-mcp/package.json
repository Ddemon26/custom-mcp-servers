{
  "name": "json-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for JSON, YAML, and XML processing and transformation",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "json-mcp-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "ts-node --esm src/server.ts",
    "start": "node dist/server.js",
    "clean": "shx rm -rf dist",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "jsonpath-plus": "^10.2.0",
    "yaml": "^2.6.1",
    "fast-xml-parser": "^4.5.0",
    "ajv": "^8.17.1",
    "json-diff": "^1.0.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
